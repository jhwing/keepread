<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cover_list"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingLeft="10dp"
    android:paddingRight="3dp"
    android:orientation="vertical"
    >
	<TextView
	    android:id="@+id/item_title"
	    android:layout_width="match_parent"
	    android:layout_height="22dp"
	    android:textSize="16sp"
	    android:singleLine="true"
	    />
	<LinearLayout
	    android:id="@+id/item_description"
	    android:layout_width="match_parent"
	    android:layout_height="78dp"
	    android:orientation="horizontal"
	    android:layout_marginTop="5dp"
	    >
	    <ImageView 
	        android:contentDescription="@string/app_name"
	        android:id="@+id/item_description_thumbnail_img"
	        android:layout_width="80dp"
	        android:layout_height="70dp"
	        />
	    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:layout_marginLeft="5dp"
	        >
	        <TextView 
	            android:id="@+id/item_description_thumbnail_content"
	            android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:lineSpacingExtra="3dp"
		        android:lines="2"
		        android:ellipsize="end"
		        android:text="内容简述在遥远的太平洋上"
	            />
	        <TextView 
	            android:id="@+id/item_description_thumbnail_content_time"
	            android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:gravity="left|center_vertical"
		        android:textSize="12sp"
		        android:text="时间 10：20"
	            />
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>